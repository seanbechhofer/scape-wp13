## Basic Fuseki configuation file.
## 
## See also config_examples.ttl for commented examples.
## See also config_tdb.ttl for TDB specific examples.

@prefix :        <#> .
@prefix fuseki:  <http://jena.apache.org/fuseki#> .
@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#> .
@prefix tdb:     <http://jena.hpl.hp.com/2008/tdb#> .
@prefix ja:      <http://jena.hpl.hp.com/2005/11/Assembler#> .

[] rdf:type fuseki:Server ;
   # Timeout - server-wide default: milliseconds.
   # Format 1: "1000" -- 1 second timeout
   # Format 2: "10000,60000" -- 10s timeout to first result, then 60s timeout for the rest of query.
   # See java doc for ARQ.queryTimeout
   # ja:context [ ja:cxtName "arq:queryTimeout" ;  ja:cxtValue "10000" ] ;

   # ja:loadClass "your.code.Class" ;

   fuseki:services (
     <#service>
   ) .

## ---------------------------------------------------------------
## Updatable in-memory dataset.

<#service> rdf:type fuseki:Service ;
    # URI of the dataset -- http://host:port/scape
    fuseki:name                        "scape" ; 
    fuseki:serviceQuery                "sparql" ;
    fuseki:serviceQuery                "query" ;
    fuseki:serviceReadGraphStore       "" ;      
    fuseki:dataset                     <#dataset> ;
    fuseki:serviceReadWriteGraphStore  "data" ;     
    fuseki:serviceReadGraphStore       "get" ;
    fuseki:serviceUpload               "upload" ;   # Non-SPARQL upload service
    fuseki:serviceReadGraphStore       "" ;      
    fuseki:dataset                     <#dataset> ;
    .

[] ja:loadClass "com.hp.hpl.jena.tdb.TDB" .
tdb:DatasetTDB  rdfs:subClassOf  ja:RDFDataset .
tdb:GraphTDB    rdfs:subClassOf  ja:Model .

<#dataset> rdf:type      tdb:DatasetTDB ;
     tdb:location "kb" ;
     tdb:unionDefaultGraph true ;
     .
